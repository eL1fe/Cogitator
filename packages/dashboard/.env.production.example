# Cogitator Dashboard - Production Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# REQUIRED - Supabase Auth
# ============================================

# Get from: Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service role key (for admin operations)
# Get from: Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Your app URL (for OAuth redirects)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# ============================================
# DATABASE (Supabase Postgres)
# ============================================

# Get from: Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL=postgres://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?sslmode=require

# Encryption key for sensitive data (generate with: openssl rand -hex 16)
COGITATOR_ENCRYPTION_KEY=your-32-character-hex-string

# ============================================
# REDIS (Upstash) - For rate limiting & queues
# ============================================

# Get from: Upstash Console > Redis Database > REST API
UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# OR use standard Redis URL (for self-hosted Redis)
# REDIS_URL=redis://localhost:6379

# ============================================
# LLM PROVIDERS - Configure at least one
# ============================================

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Google AI
GOOGLE_API_KEY=...

# Ollama (local or cloud)
OLLAMA_URL=http://localhost:11434
# For Ollama Cloud:
# OLLAMA_HOST=https://ollama.com
# OLLAMA_API_KEY=your-ollama-cloud-key

# ============================================
# AUTHENTICATION OPTIONS
# ============================================

# Enable authentication (default: true in production, false in dev)
COGITATOR_AUTH_ENABLED=true

# API Key Authentication (for programmatic access)
# Single key mode - simple setup
COGITATOR_API_KEY=cog_your_api_key_here

# Multiple keys mode - JSON array for advanced setups
# COGITATOR_API_KEYS=[{"id":"key1","hash":"sha256hash","name":"Production Key","role":"admin","createdAt":1234567890}]

# ============================================
# OPTIONAL
# ============================================

# Node environment
NODE_ENV=production

# Logging level
LOG_LEVEL=info
