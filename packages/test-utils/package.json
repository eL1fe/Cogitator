{
  "name": "@cogitator-ai/test-utils",
  "version": "0.1.0",
  "description": "Shared testing utilities for Cogitator packages",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cogitator-ai/types": "workspace:*",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eL1fe/cogitator.git",
    "directory": "packages/test-utils"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
